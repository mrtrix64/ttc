<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.dellardavies.ttc"
        version = "4.0.2">

	<name>TTC</name>

	<description>
The Travel Convention is the UK's largest and most significant annual event for senior travel industry professionals, organised by ABTA - The UK's leading travel association. This handy App gives you everything you will need for the 2014 Convention, schedule times, session information, places, sponsor list and more...	</description>

	<author href="http://thetravelconvention.com" email="support@thetravelconvention.com">
		Colin Miller
	</author>
	<icon src="icon36x36.png" width="36" height="36" />
  	<icon src="icon48x48.png" width="48" height="48" />
	<icon src="icon57x57.png" width="57" height="57" />
	<icon src="icon72x72.png" width="72" height="72" />
	<icon src="icon114x114.png" width="114" height="114" />

	<gap:splash src="Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="Default-@2x.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />
	<gap:splash src="Default-Portrait.png" gap:platform="ios" width="768" height="1004" />
	<gap:splash src="Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2008" />
	<gap:splash src="ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	<gap:splash src="mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<gap:splash src="hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<gap:splash src="xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	<gap:splash src="768x1280_splash_windows.jpg" gap:platform="winphone" />
	
	<preference name="show-splash-screen-spinner" value="true" />

	<preference name="orientation" value="portrait" />
	
	<preference name="DisallowOverscroll" value="true" />
	
	<gap:plugin name="org.apache.cordova.inappbrowser" />
	
	<gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" version="1.2.0" />
	
	<gap:plugin name="org.apache.cordova.network-information"/>
	
	
	
	<access origin="*" />
</widget>